<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/css/main.css">
<style>/* Resetting default margin and padding */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  /* Body styles */
  body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
  }
  
  /* Container styles */
  .container {
    padding: 20px;
  }
  
  /* Navbar styles */
  .navbar {
    background-color: #ff6f61;
    color: #fff;
    padding: 10px 20px;
  }
  
  .navbar a {
    color: #fff;
    text-decoration: none;
    margin-right: 10px;
  }
  
  /* Card styles */
  .card {
    background-color: #fff;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }
  
  /* Form styles */
  .form-control {
    margin-bottom: 20px;
  }
  
  .label-text {
    font-weight: bold;
  }
  
  .input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease;
  }
  
  .input:focus {
    border-color: #ff6f61;
  }
  
  .btn {
    display: inline-block;
    background-color: #00818a;
    color: #fff;
    padding: 12px 24px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }
  
  .btn:hover {
    background-color: #005a63;
  }
  
  /* Alert styles */
  .alert {
    background-color: #ffe3e3;
    color: #c40000;
    padding: 15px;
    border-radius: 5px;
    margin-bottom: 20px;
  }
  
  .success-message {
    background-color: #e4f1e4;
    color: #00a74a;
    padding: 15px;
    border-radius: 5px;
    margin-bottom: 20px;
  }
  </style>
</head>
<body>
  <% include('partials/navbar', { page: 'register' }) %>
  
  <div class="container mx-auto">
    <div class="max-w-md mx-auto mt-6">
      <% if(typeof successMessage !== 'undefined') { %>
        <div class="success-message">
          <span><%= successMessage %></span>
        </div>
        <a href="/login" class="btn">Proceed to Log in</a>
      <% } else { %>
        <form action="/register" method="POST" class="card shadow-md p-6">
          <h2 class="text-2xl font-semibold mb-4">Register</h2>
          <% if(typeof errorMessage !== 'undefined') { %>
            <div class="alert">
              <span><%= errorMessage %></span>
            </div>
          <% } %>
          <div class="form-control">
            <label class="label">
              <span class="label-text">User Name</span>
            </label>
            <input type="text" name="userName" placeholder="User Name" required class="input">
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Password</span>
            </label>
            <input type="password" name="password" placeholder="Password" required class="input">
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Confirm Password</span>
            </label>
            <input type="password" name="password2" placeholder="Confirm Password" required class="input">
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Email Address</span>
            </label>
            <input type="email" name="email" placeholder="Email Address" required class="input">
          </div>
          <button type="submit" class="btn">Register</button>
        </form>
      <% } %>
    </div>
  </div>
</body>
</html>
